<% title "Items" %>

<table>
  <tr>
    <th>Title</th>
    <th>Done At</th>
    <th>User</th>
  </tr>
  <% for item in @items %>
    <tr>
      <td><%= item.title %></td>
      <td><%= item.done_at %></td>
      <td><%= item.user_id %></td>
      <td><%= link_to "Show", [@list, item] %></td>
      <td><%= link_to "Edit", edit_list_item_path(@list, item) %></td>
      <td><%= link_to "Destroy", [@list, item], :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Item", new_list_item_path(@list) %></p>
